{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "webAppName": {
            "type": "string",
            "metadata": {
                "description": "The name of your Web Site."
            }
        },
        "R1Location": {
            "type": "string",
            "allowedValues": [
                "eastus",
                "westus",
                "westeurope",
                "northeurope"
            ]
        },
        "R2Location": {
            "type": "string",
            "allowedValues": [
                "eastus",
                "westus",
                "westeurope",
                "northeurope"
            ]
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "B1",
                "B2",
                "S1",
                "S2",
                "P1",
                "P2"
            ],
            "defaultValue": "S1",
            "metadata": {
                "description": "The pricing and performance tier for the hosting plan."
            }
        },
        "workerSize": {
            "type": "string",
            "allowedValues": [
                "1",
                "2",
                "3",
                "4",
                "5"
            ],
            "defaultValue": "1",
            "metadata": {
                "description": "The number of worker instances."
            }
        }
    },
    "variables": {
        "hostingPlanNameR1": "[concat(parameters('webAppName'), '-AppPlan-R1')]",
        "hostingPlanNameR2": "[concat(parameters('webAppName'), '-AppPlan-R2')]",
        "webAppNameR1": "[concat(parameters('webAppName'), '-R1')]",
        "webAppNameR2": "[concat(parameters('webAppName'), '-R2')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[variables('hostingPlanNameR1')]",
            "location": "[parameters('R1Location')]",
            "sku": {
                "name": "[parameters('sku')]",
                "capacity": "[parameters('workerSize')]"
            },
            "properties": {
                "name": "[variables('hostingPlanNameR1')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "apiVersion": "2019-08-01",
            "name": "[variables('hostingPlanNameR2')]",
            "location": "[parameters('R2Location')]",
            "sku": {
                "name": "[parameters('sku')]",
                "capacity": "[parameters('workerSize')]"
            },
            "properties": {
                "name": "[variables('hostingPlanNameR2')]"
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[variables('webAppNameR1')]",
            "kind": "app",
            "location": "[parameters('R1Location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanNameR1'))]"
            ],
            "properties": {
                "serverFarmId": "[variables('hostingPlanNameR1')]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "WebApplicationDemoContext",
                            "connectionString": "Server=tcp:meetupnishlive.database.windows.net,1433;Initial Catalog=SampleDatabase;Persist Security Info=False;User ID=vladimir;Password=Pa$$w0rd1234;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
                            "type": "SQLAzure"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[variables('webAppNameR2')]",
            "kind": "app",
            "location": "[parameters('R2Location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanNameR2'))]"
            ],
            "properties": {
                "serverFarmId": "[variables('hostingPlanNameR2')]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "WebApplicationDemoContext",
                            "connectionString": "Server=tcp:meetupnishlive.database.windows.net,1433;Initial Catalog=SampleDatabase;Persist Security Info=False;User ID=vladimir;Password=Pa$$w0rd1234;MultipleActiveResultSets=False;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;",
                            "type": "SQLAzure"
                        }
                    ]
                }
            }
        }
    ]
}